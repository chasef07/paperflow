{
  "name": "@paperflow/core",
  "version": "0.1.2",
  "description": "Core types, IR, and loaders for PaperFlow",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts --outdir ./dist --target node --format esm",
    "build:types": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "pdf",
    "core",
    "types",
    "paperflow"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chasef07/paperflow.git",
    "directory": "packages/core"
  }
}
